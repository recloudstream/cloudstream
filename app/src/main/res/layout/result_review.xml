<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?attr/boxItemBackground"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="top"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/review_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/user_image_avatar"
                    android:src="@drawable/ic_baseline_avatar_24" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp">

                    <TextView
                        android:id="@+id/review_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textColor"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        tools:text="Author" />

                    <TextView
                        android:id="@+id/review_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/review_author"
                        android:textColor="?attr/grayTextColor"
                        android:textSize="12sp"
                        tools:text="January 1, 2025" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/review_tags_single"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:checked="false"
                        android:checkable="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:maxWidth="200dp"
                        android:visibility="gone"
                        style="@style/ChipReviewAlt" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/review_tags_small_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-10dp"
                    android:visibility="gone">
                    <GridLayout
                        android:id="@+id/review_tags_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="1"
                        android:orientation="horizontal"
                        android:gravity="start"
                        app:chipSpacingVertical="-7dp" />
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/review_tags_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:id="@+id/review_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:orientation="horizontal"
                android:gravity="start"
                app:chipSpacingVertical="-7dp" />
        </HorizontalScrollView>

        <ToggleButton
            android:id="@+id/spoiler_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:textOff="@string/reveal_spoiler"
            android:textOn="@string/hide_spoiler"
            android:textStyle="bold"
            android:visibility="gone"
            android:backgroundTint="@color/colorPrimaryGrey"
            android:drawableEnd="@drawable/quantum_ic_keyboard_arrow_down_white_36"
            tools:visibility="visible"
            style="@style/RegularButtonTV" />

        <TextView
            android:id="@+id/review_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="?attr/textColor"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            tools:text="Title" />

        <TextView
            android:id="@+id/review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="?attr/textColor"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            tools:text="Content" />
    </LinearLayout>
</androidx.cardview.widget.CardView>