<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primaryBlackBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/sync_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:liftOnScroll="true"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/sync_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/primaryGrayBackground"
            app:title="@string/firebase_sync"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sync_appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Account Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sync_account_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/primaryGrayBackground"
                android:nextFocusDown="@id/sync_pending_plugins_card"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:focusable="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/firebase_key"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/sync_account_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sync_not_logged_in"
                        android:gravity="center"
                        android:textColor="?attr/textColor"
                        android:layout_marginBottom="12dp"/>

                    <!-- Auth managed by Account Settings now -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sync_account_action_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sync_manage_accounts"
                        style="@style/WhiteButton"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Pending Plugins Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sync_pending_plugins_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/primaryGrayBackground"
                android:nextFocusUp="@id/sync_account_card"
                android:nextFocusDown="@id/sync_config_header"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:id="@+id/sync_pending_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sync_pending_plugins_title"
                            android:textColor="?attr/textColor"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:focusable="true"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:text="@string/sync_warn_tag"
                            android:textSize="10sp"
                            android:background="@color/red_400"
                            android:paddingHorizontal="4dp"
                            android:paddingVertical="2dp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                     <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sync_pending_plugins_description"
                        android:textColor="?attr/textColor"
                        android:alpha="0.7"
                        android:layout_marginBottom="8dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_pending_plugins_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_sync_plugin"
                        android:layout_marginBottom="12dp"
                        android:descendantFocusability="afterDescendants"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                         <com.google.android.material.button.MaterialButton
                            android:id="@+id/sync_install_plugins_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sync_install_all"
                            android:layout_marginEnd="4dp"
                            style="@style/WhiteButton"/>

                         <com.google.android.material.button.MaterialButton
                            android:id="@+id/sync_ignore_plugins_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sync_ignore"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Database Configuration Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/primaryGrayBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                     <LinearLayout
                        android:id="@+id/sync_config_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sync_database_configuration"
                            android:textColor="?attr/textColor"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <ImageView
                             android:layout_width="24dp"
                             android:layout_height="24dp"
                             android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                             app:tint="?attr/textColor"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sync_config_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sync_api_key"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_marginBottom="8dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sync_api_key"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:nextFocusDown="@id/sync_project_id"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sync_project_id"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_marginBottom="8dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sync_project_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nextFocusDown="@id/sync_app_id"
                                android:nextFocusUp="@id/sync_api_key"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sync_app_id"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_marginBottom="8dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sync_app_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nextFocusDown="@id/sync_connect_btn"
                                android:nextFocusUp="@id/sync_project_id"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sync_connect_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sync_connect_database"
                            app:icon="@drawable/ic_baseline_cloud_queue_24"
                            style="@style/WhiteButton"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- App Settings Category -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sync_app_settings_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="?attr/primaryGrayBackground"
                android:nextFocusUp="@id/sync_connect_btn"
                android:nextFocusDown="@id/sync_library_card"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sync_app_configuration"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <!-- Appearance -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_appearance_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/sync_item_row"/>

                    <!-- Player -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_player_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/sync_item_row"/>

                    <!-- Downloads -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_downloads_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/sync_item_row"/>

                    <!-- General -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_general_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/sync_item_row"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Library & Data Category -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sync_library_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="?attr/primaryGrayBackground"
                android:nextFocusUp="@id/sync_app_settings_card"
                android:nextFocusDown="@id/sync_extensions_card"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sync_library_data"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <!-- Accounts -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_accounts_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/sync_item_row"/>

                    <!-- Bookmarks -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_bookmarks_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/sync_item_row"/>

                    <!-- Resume Watching -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_resume_watching_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/sync_item_row"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Extensions Category -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sync_extensions_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="?attr/primaryGrayBackground"
                android:nextFocusUp="@id/sync_library_card"
                android:nextFocusDown="@id/sync_interface_card"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sync_extensions"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <!-- Repositories -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_repositories_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/sync_item_row"/>

                    <!-- Plugins -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_plugins_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/sync_item_row"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Interface Category -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sync_interface_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="?attr/primaryGrayBackground"
                android:nextFocusUp="@id/sync_extensions_card"
                android:nextFocusDown="@id/sync_status_card"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sync_interface_personalization"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <!-- Homepage API -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_homepage_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/sync_item_row"/>

                    <!-- Pinned Providers -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sync_pinned_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/sync_item_row"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sync_status_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/primaryGrayBackground"
                android:nextFocusUp="@id/sync_interface_card"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sync_status"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sync_status_label"
                            android:textColor="?attr/textColor"/>
                        <TextView
                            android:id="@+id/sync_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sync_status_connected"
                            android:textColor="@android:color/holo_green_light"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sync_last_sync_label"
                            android:textColor="?attr/textColor"/>
                        <TextView
                            android:id="@+id/sync_last_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sync_never"
                            android:textColor="?attr/textColor"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sync_now_btn"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sync_now_btn"
                            app:icon="@drawable/ic_baseline_sync_24"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
